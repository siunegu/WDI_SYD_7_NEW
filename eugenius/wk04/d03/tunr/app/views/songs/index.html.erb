<div id="ui_top">
	<h2>Songs</h2>
</div>

<% if user_signed_in? && current_user.admin? %>
<%= link_to '+ Add Song', new_song_path %>
<% end %>

<ul>
	<% @songs.each do |song| %>
		<li>
		<section class="selection">
		<hr>
			<article>
			<%= link_to song.name, song %>
			<% if user_signed_in? && current_user.admin? %>
				<button>
					<%= link_to 'Edit', edit_song_path(song) %>
				</button>
			<% end %>
			</article>
		<hr>			
		</section>			
		</li>	
	<% end %>
</ul>
