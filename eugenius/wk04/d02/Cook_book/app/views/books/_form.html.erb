<% unless @book.errors.empty? %>
	<ul id="errors">
		<% @book.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for @book do |f| %>
	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

	<div class="form-group">
		<%= f.label :cuisine %>
		<%= f.text_field :cuisine %>
	</div>

	<div class="form-group">
		<%= f.label :chef %>	
		<%= f.text_field :chef %>	
	</div>	

	<div class="form-group">
		<%= f.label :image %>	
		<%= f.text_field :image %>	
	</div>		

	<div class="form-group">
		<%= f.submit %>	
	</div>					
<% end %>